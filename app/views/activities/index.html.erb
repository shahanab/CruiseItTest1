<h1>Activities for </h1> <!-- put the Itinerary name-->

<table>
  <thead>
    <tr>
      <th>Waypoints</th>
      <th>Embark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @activities %>
    <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.poi%></td>
            <td><%= activity.start_time.strftime('%a, %b %d, %Y %I:%M %p') %></td>
            <td><%= link_to 'Edit', edit_itinerary_activity_path(activity.itinerary, activity) %></td>
            <td><%= link_to 'Delete', itinerary_activity_path(activity.itinerary, activity), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_itinerary_activity_path %>
